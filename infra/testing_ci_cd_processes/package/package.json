{
    "meta": {
        "name": "service_hello_world",
        "maintainer": "sshipkov",
        "description": "Service for testing CI/CD Processes",
        "version": "{revision}"
    },
    "build": {
        "build_type": "release",
        "targets": [
            "infra/deploy/testing_ci_cd_processes"
        ],
        "target-platforms": [
            "linux"
        ]
    },
    "data": [
        {
            "source": {
                "type": "RELATIVE",
                "path": "Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "infra/deploy/testing_ci_cd_processes"
            },
            "destination": {
                "path": "/service"
            }
        }
    ]
}
