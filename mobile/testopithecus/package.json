{
  "name": "@xplat/testopithecus",
  "version": "1.0.0",
  "description": "Testopithecus",
  "author": "amosov-f@yandex-team.ru",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "mocha": "^7.1.1",
    "mocha-teamcity-reporter": "^3.0.0",
    "sync-request": "^6.1.0",
    "imap": "^0.8.19",
    "spectron": "^8.0.0",
    "electron": "^6.1.9",
    "@types/webdriverio": "^4.8.0"
  },
  "scripts": {
    "build": "yarn fmt; tsc",
    "clean": "rm -rf ../../../build/tsc/testopithecus",
    "flbt": "yarn fmt; eslint --fix --ext .ts -c ../.eslintrc.json code",
    "fmt": "prettier --write code/**/*.ts __tests__/**/*.ts",
    "lint": "eslint --ext .ts -c ../.eslintrc.json code",
    "lint:fix": "eslint --fix -c ../.eslintrc.json --ext .ts code",
    "test": "mocha -r ts-node/register __tests__/mock-mailbox.ts",
    "test:integration": "mocha -r ts-node/register __tests__/*.ts --timeout 0 --reporter mocha-teamcity-reporter --reporter-options flowId=gobbledygook",
    "test:backend": "mocha -r ts-node/register __tests__/backend/mobile-mail-backend-tests.ts --timeout 0 --reporter mocha-teamcity-reporter --reporter-options flowId=gobbledygook"
  },
  "dependencies": {
    "@types/imap": "^0.8.30"
  }
}
