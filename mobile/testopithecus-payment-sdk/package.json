{
  "name": "@xplat/testopithecus-payment-sdk",
  "version": "1.0.0",
  "description": "testopithecus-payment-sdk",
  "author": "staff@yandex-team.ru",
  "license": "MIT",
  "private": true,
  "devDependencies": {
  },
  "scripts": {
    "build": "yarn fmt; tsc",
    "clean": "rm -rf ../../../build/tsc/testopithecus-payment-sdk",
    "flbt": "yarn fmt; eslint --fix --ext .ts -c ../.eslintrc.json code __tests__",
    "fmt": "prettier --config ./../.prettierrc.json --write code/**/*.ts __tests__/**/*.ts",
    "lint": "eslint --ext .ts -c ../.eslintrc.json code __tests__",
    "lint:fix": "eslint --fix --ext .ts -c ../.eslintrc.json code __tests__",
    "test": "yarn fmt; tsc && jest"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "__tests__"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
