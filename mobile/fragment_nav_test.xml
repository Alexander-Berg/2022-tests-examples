<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_test_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_horizontal_transparent_16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/nav_test_identifier"
            android:layout_width="wrap_content"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/nav_test_forward"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:text="Forward"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/nav_test_forward_in_other_tab"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:text="ForwardInNextTab"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/nav_test_forward_root_in_other_tab"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:text="ForwardInNextTab"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/nav_test_back"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:text="Back"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/nav_test_back_to"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:text="Back To"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/nav_test_replace"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:text="Replace"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>