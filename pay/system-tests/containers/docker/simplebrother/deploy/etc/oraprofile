ORACLE_HOME="/opt/oracle/instantclient_19_3"
TNS_ADMIN="/etc/oracle/network/admin"

LD_LIBRARY_PATH="$ORACLE_HOME:$LD_LIBRARY_PATH"
PATH="$ORACLE_HOME:$PATH"

export ORACLE_HOME TNS_ADMIN LD_LIBRARY_PATH PATH

NLS_LANG="AMERICAN_AMERICA.UTF8"
NLS_SORT="RUSSIAN"
NLS_NUMERIC_CHARACTERS=". "
NLS_DATE_FORMAT="DD mon YYYY HH24:MI"

export NLS_LANG NLS_SORT NLS_NUMERIC_CHARACTERS NLS_DATE_FORMAT