{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2019
    },
    "extends": ["eslint:recommended"],
    "rules": {
        "quotes": [2, "single"],
        "no-constant-condition": ["error", { "checkLoops": false }],
    },
    "env": {
        "es6": true,
        "browser": true,
        "jest": true,
        "node": true,
    },
    "globals": {
        "jestPuppeteer": true,
        "page": true,
    }
}
