<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="get-hotspots.xsl"?>

<page  xmlns:x="http://www.yandex.ru/xscript">
    <xscript all-threaded="yes" xmlns="http://www.yandex.ru/xscript">
        <add-headers>
            <header name="Content-Type" value="text/javascript; charset=utf-8"/>
        </add-headers>
    </xscript>
    
    <x:js><![CDATA[xscript.state.fileName = 'tile_x=' + xscript.request.args.x + '_y=' + xscript.request.args.y + '_z=' + xscript.request.args.z;]]></x:js>
    
    <file>
        <method>loadText</method>
        <param type="StateArg">fileName</param>
    </file>
</page>