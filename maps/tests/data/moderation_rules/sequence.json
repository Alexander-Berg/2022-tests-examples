{
    "moderation_rules": [
        {
            "predicates": {
                "empty_verdicts": "true"
            },
            "action": "disapproved"
        },
        {
            "predicates": {
                "has_any_verdict": ["nonroad"],
                "bbox": [10, 10, 15, 15]
            },
            "action": "approved"
        },
        {
            "predicates": {
                "has_any_verdict": ["nonroad"]
            },
            "action": "disapproved"
        },
        {
            "predicates": {
                "has_any_tag": ["chat"],
                "has_any_verdict": ["road_general_talks"],
                "type": "point"
            },
            "action": "disapproved"
        },
        {
            "predicates": {
                "has_any_tag": ["chat"],
                "has_any_verdict": ["road_general_talks"],
                "type": "comment"
            },
            "action": "approved"
        },
        {
            "predicates": {
                "has_any_tag": ["unknown_tag"],
                "verdicts_subset_of": ["text_toloka_obscene"],
                "type": "point",
                "_comment": "this rule only to mark text_toloka_obscene as known verdict"
            },
            "action": "disapproved"
        },
        {
            "predicates": {
                "has_any_tag": ["local_chat"],
                "verdicts_subset_of": ["road_detour", "road_spam"],
                "type": "comment"
            },
            "action": "approved"
        }
    ]
}
