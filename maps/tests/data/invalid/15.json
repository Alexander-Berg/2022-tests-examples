{
  "$schema": "../../../schema/style.json",
  "metadata": {
    "invalid": "text-field cannot be a property function"
  },
  "sources": {
    "vmap2": {
      "type": "empty"
    }
  },
  "layers": [
    {
      "id": "River label",
      "source": "vmap2",
      "source-layer": "hydro_l",
      "minzoom": 3,
      "maxzoom": 20,
      "type": "label",
      "filter": [
        "!=",
        "ft_type_name",
        "hydro-swamp"
      ],
      "style": {
        "label-target": "line",
        "text-field": {
          "property": "prop",
          "stops": [
            [
              "a",
              "name"
            ]
          ]
        },
        "text-size": 8,
        "text-color": "#00f",
        "text-max-width": "8"
      }
    }
  ]
}
