{
    "meta": {
        "name": "core-teapot",
        "maintainer": "Geo Infra <geo-infra@yandex-team.ru>",
        "description": "Yacare (fastcgi) application for online teapot handling",
        "version": "{revision}"
    },
    "build": {
        "targets": [
            "maps/infra/teapot/bin"
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "maps/infra/teapot/bin",
                "files": [
                    "teapot"
                ]
            },
            "destination": {
                "path": "/install/usr/lib/yandex/maps/yacare/available/"
            }
        },
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "maps/infra/teapot/bin/debian/teapot",
                "files": ["*"]
            },
            "destination": {
                "path": "/install/"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "maps/infra/teapot/docker/ecstatic-hooks/zavarka.postdl"
            },
            "destination": {
                "path": "/install/etc/yandex/maps/ecstatic/yandex-maps-jams-speeds/",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "maps/infra/teapot/docker/ecstatic-hooks/teapot.check"
            },
            "destination": {
                "path": "/install/etc/yandex/maps/ecstatic/checks/",
                "attributes": {
                    "mode": {
                        "value": "+x"
                    }
                }
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "maps/infra/teapot/docker/Dockerfile"
            },
            "destination": {
                "path": "/Dockerfile"
            }
        },
        {
            "source": {
                "type": "ARCADIA",
                "path": "maps/infra/teapot/docker/install",
                "files": [ "*" ]
            },
            "destination": {
                "path": "/install/"
            }
        }
    ]
}

