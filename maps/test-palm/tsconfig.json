{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noImplicitReturns": false,
        "esModuleInterop": true,
        "noEmitOnError": false,
        "noImplicitAny": false,

        "types": ["node", "jest"],
        "typeRoots": [
            "../../node_modules/@types",
            "../../node_modules/@types/jest",
            "../../node_modules/@types/jest-environment-puppeteer"
        ]
    },
    "include": [".", "../../tests"]
}
