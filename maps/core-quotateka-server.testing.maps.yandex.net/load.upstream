---
regexp_section:
  matcher:
    match_fsm:
      cgi: '.*use_load=1.*'
  modules:
    - report:
        uuid: 'load'
        ranges: default
    - threshold:
        lo_bytes: 734003
        hi_bytes: 838860
        pass_timeout: 10s
        recv_timeout: 1s
    - headers:
        append_func:
          X-Forwarded-For: realip
        create_func_weak:
          X-Real-IP: realip
          X-Source-Port-Y: realport
        create:
          Host: 'core-quotateka-server.maps.yandex.net'
          X-Ya-Backend-Timeout-Ms: '1000'
    - balancer2:
        attempts: 3
        active:
          steady: true
          delay: '10s'
          request: 'GET /ping HTTP/1.1\nHost: core-quotateka-server.maps.yandex.net\r\n\r\n'
        attempts_rate_limiter:
          limit: 0.34
        generated_proxy_backends:
          proxy_options:
            connect_timeout: 70ms
            backend_timeout: 1000ms
            keepalive_count: 100
            fail_on_5xx: true
          include_backends:
            type: BY_ID
            ids: [maps_core_quotateka_load_sas]
        on_error:
          errordocument:
            status: 504
            content: "Service unavailable"
