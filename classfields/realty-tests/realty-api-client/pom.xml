<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>ru.yandex.realty</groupId>
        <artifactId>realty-tests</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>realty-api-client</artifactId>
    <version>1.0-SNAPSHOT</version>

    <name>Realty API Client</name>

    <dependencies>
        <dependency>
            <groupId>ru.vertis.tests</groupId>
            <artifactId>commons</artifactId>
        </dependency>
        <dependency>
            <groupId>ru.vertis.tests</groupId>
            <artifactId>commons-ra</artifactId>
        </dependency>
        <dependency>
            <groupId>ru.vertis.tests</groupId>
            <artifactId>guice-junit</artifactId>
        </dependency>
        <dependency>
            <groupId>ru.vertis.tests</groupId>
            <artifactId>passport-yandex</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>org.aeonbits.owner</groupId>
            <artifactId>owner-java8</artifactId>
        </dependency>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>rest-assured</artifactId>
        </dependency>
        <dependency>
            <groupId>io.rest-assured</groupId>
            <artifactId>json-schema-validator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
        </dependency>
        <dependency>
            <groupId>org.awaitility</groupId>
            <artifactId>awaitility</artifactId>
        </dependency>
        <dependency>
            <artifactId>realty-model</artifactId>
            <groupId>ru.yandex.realty</groupId>
        </dependency>
        <dependency>
            <groupId>javax.ws.rs</groupId>
            <artifactId>javax.ws.rs-api</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>ru.lanwen.raml</groupId>
                <artifactId>rarc-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>vos2-rarc</id>
                        <goals>
                            <goal>generate-client</goal>
                        </goals>
                        <configuration>
                            <ramlFile>${project.basedir}/src/main/resources/api/vos2.raml</ramlFile>
                            <basePackage>ru.auto.test.api.realty</basePackage>
                        </configuration>
                    </execution>
                    <execution>
                        <id>searcher-rarc</id>
                        <goals>
                            <goal>generate-client</goal>
                        </goals>
                        <configuration>
                            <ramlFile>${project.basedir}/src/main/resources/api/searcher.raml</ramlFile>
                            <basePackage>ru.auto.test.api.realty</basePackage>
                        </configuration>
                    </execution>
                    <execution>
                        <id>back-rt-rarc</id>
                        <goals>
                            <goal>generate-client</goal>
                        </goals>
                        <configuration>
                            <ramlFile>${project.basedir}/src/main/resources/api/back-rt.raml</ramlFile>
                            <basePackage>ru.auto.test.api.realty</basePackage>
                        </configuration>
                    </execution>
                    <execution>
                        <id>promocode-rarc</id>
                        <goals>
                            <goal>generate-client</goal>
                        </goals>
                        <configuration>
                            <ramlFile>${project.basedir}/src/main/resources/api/promocode.raml</ramlFile>
                            <basePackage>ru.auto.test.api.realty</basePackage>
                        </configuration>
                    </execution>
                    <execution>
                        <id>bnb-searcher-rarc</id>
                        <goals>
                            <goal>generate-client</goal>
                        </goals>
                        <configuration>
                            <ramlFile>${project.basedir}/src/main/resources/api/bnb-searcher.raml</ramlFile>
                            <basePackage>ru.auto.test.api.realty</basePackage>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!--Generate enums for utils-->
            <plugin>
                <groupId>org.jsonschema2pojo</groupId>
                <artifactId>jsonschema2pojo-maven-plugin</artifactId>
                <version>0.4.33</version>
                <configuration>
                    <sourceDirectory>${basedir}/src/main/resources/api/enums</sourceDirectory>
                    <targetPackage>ru.auto.test.api.realty</targetPackage>
                    <annotationStyle>gson</annotationStyle>
                    <sourceType>json</sourceType>
                    <useLongIntegers>true</useLongIntegers>
                    <generateBuilders>true</generateBuilders>
                </configuration>
                <executions>
                    <execution>
                        <id>schema</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <sourceDirectory>${project.basedir}/src/main/resources/api/enums</sourceDirectory>
                            <sourceType>jsonschema</sourceType>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>