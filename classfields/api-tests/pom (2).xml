            </dependency>
            <dependency>
                <groupId>ru.auto.tests</groupId>
                <artifactId>public-api-client</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>ru.auto.tests</groupId>
