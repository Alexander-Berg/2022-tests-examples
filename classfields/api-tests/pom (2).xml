        <aspectj.version>1.9.6</aspectj.version>
        <lombok.verison>1.18.22</lombok.verison>
        <javax.annotation.verison>1.3.2</javax.annotation.verison>
        <gson.version>2.8.6</gson.version>
        <guice.version>4.1.0</guice.version>
        <hamcrest.version>1.3</hamcrest.version>
        <junit.version>4.12</junit.version>
        <restassured.version>4.3.3</restassured.version>
        <junit.dataprovider.version>1.11.0</junit.dataprovider.version>
        <log4j.version>1.2.17</log4j.version>
        <commons.lang>2.6</commons.lang>
        <swagger-coverage-version>1.4.1</swagger-coverage-version>
        <!--default-->
        <thread.count>1</thread.count>
        <fork.count>1</fork.count>
