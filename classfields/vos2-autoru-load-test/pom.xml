<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ru.yandex.vertis.vos2</groupId>
    <artifactId>vos2-autoru-load-test</artifactId>
    <packaging>jar</packaging>
    <version>0.0.1-SNAPSHOT</version>
    <name>vos2-autoru-load-test</name>

    <properties>
        <scala.major.version>2.13</scala.major.version>
        <scala.version>${scala.major.version}.8</scala.version>
        <gatling-maven-plugin.version>3.0.2</gatling-maven-plugin.version>
        <scalafmt-plugin.version>1.0.3</scalafmt-plugin.version>
        <yandex.vertis.schema-registry.version>v0.0.6808</yandex.vertis.schema-registry.version>
        <gatling-charts-highcharts.version>3.1.3</gatling-charts-highcharts.version>
        <netty.version>4.1.74.Final</netty.version>
        <jackson.version>2.9.9</jackson.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>io.gatling</groupId>
                <artifactId>gatling-maven-plugin</artifactId>
                <version>${gatling-maven-plugin.version}</version>
                <configuration>
                    <simulationClass>scenarios.Drafts</simulationClass>
                    <jvmArgs>
                        <jvmArg>-Djava.net.preferIPv6Addresses=true</jvmArg>
                    </jvmArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.antipathy</groupId>
                <artifactId>mvn-scalafmt_${scala.major.version}</artifactId>
                <version>${scalafmt-plugin.version}</version>
                <configuration>
                    <configLocation>.scalafmt.conf</configLocation>
                    <skipTestSources>false</skipTestSources>
                    <skipSources>false</skipSources>
                    <respectVersion>true</respectVersion>
                    <sourceDirectories>
                        <param>${project.basedir}/src/main/scala</param>
                    </sourceDirectories>
                    <testSourceDirectories>
                        <param>${project.basedir}/src/test/scala</param>
                    </testSourceDirectories>
                    <branch>master</branch>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
    <dependencies>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
        </dependency>
        <dependency>
            <groupId>io.gatling.highcharts</groupId>
            <artifactId>gatling-charts-highcharts</artifactId>
            <version>${gatling-charts-highcharts.version}</version>
        </dependency>
        <dependency>
            <groupId>ru.yandex.vertis</groupId>
            <artifactId>schema-registry</artifactId>
            <version>${yandex.vertis.schema-registry.version}</version>
        </dependency>
        <dependency>
            <groupId>io.netty</groupId>
            <artifactId>netty-codec-http</artifactId>
            <version>${netty.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
    </dependencies>
    </dependencyManagement>
</project>
