<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d] %-5level [%t] %-40logger{40} %msg %xEx%n</pattern>
        </encoder>
    </appender>

    <logger name="ru.yandex.hydra" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
