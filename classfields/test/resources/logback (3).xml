<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="MAIN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d] %-5p [%t] %X{reqId} %-40logger{36} %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="MAIN" />
    </root>

</configuration>
