<?xml version="1.0" encoding="utf-8"?>
<options>

    <option code="AIRBAG" use-filter-map='true' range='true' label='Подушки безопасности'>
        <match value="1" field="airbag-driver"/>
        <match value="2" field="airbag-passenger"/>
        <match value="4" field="airbag-side"/>
        <match value="5" field="knee-airbag"/>
        <match value="6" field="airbag-curtain"/>
        <match value="7" field="airbag-rear-side"/>
    </option>

    <option code="AIR_CONDITIONER" flag='true' label='Кондиционер'>
        <match field="condition"/>
    </option>

    <option code="ABS" use-filter-map='true' flag='true' label='ABS'>
        <match field="abs"/>
    </option>

    <option code="CLIMATE" use-filter-map='true' range='true' label='Климат'>
        <match value="1" field="condition"/>
        <match value="2" field="climate-control"/>
    </option>

    <option code="SALON_LEATHER" flag='true' label='Кожаный салон'>
        <match field="leather"/>
    </option>

    <option code="XENON_HEAD_LIGHTS" flag='true' label='Ксенон'>
        <match field="xenon"/>
        <additional code="BI_XENON_HEAD_LIGHTS"/>
    </option>

</options>
