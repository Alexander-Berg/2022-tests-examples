{
  "cds": {
    "connect_timeout": "0.4s",
    "refresh_delay": "1s",
    "lb_policy": "ROUND_ROBIN",
    "drain_connections_on_host_removal": "true",
    "health_checks": {
      "timeout": "1s",
      "interval": "2s",
      "unhealthy_threshold": 1,
      "healthy_threshold": 3
    },
    "circuit_breakers": {
      "thresholds": {
        "max_connections": 2048,
        "max_pending_requests": 2048,
        "max_requests": 2048,
        "max_retries": 3
      }
    }
  },
  "rds": {
    "route": {
      "upstream_timeout": "10s"
    }
  }
}