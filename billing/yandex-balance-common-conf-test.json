{
    "meta": {
        "name": "yandex-balance-common-conf-test",
        "maintainer": "Evgene Petrenko <mrevgen@yandex-team.ru>",
        "description": "Global configuration files for Yandex.Balance in test env.",
        "version": "4.1.{svn_revision}-dev",
        "noconffiles_all": false,
        "depends": [
            "yandex-environment-testing"
        ],
        "build-depends": [],
        "conflicts": [
            "yandex-balance-common-conf-dev",
            "yandex-balance-common-conf-prestable",
            "yandex-balance-common-conf-prod",
            "yandex-balance-common-conf-load",
            "yandex-balance-common-conf-prod-apikeys",
            "yb-common-conf-prod-trust"
        ],
        "provides":  [
            "yb-components-conf",
            "yb-common-conf"
        ]
    },
    "data": [
        {
            "source": {
                "type": "ARCADIA",
                "path": "billing/balance/configs/test",
                "files": [
                    "*.cfg.txt",
                    "*.cfg.xml",
                    "*.sample"
                ]
            },
            "destination": {
                "path": "/etc/yandex/balance-common/"
            }
        }
    ]
}
