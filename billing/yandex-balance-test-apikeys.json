{
  "meta": {
    "name": "yandex-balance-test-apikeys",
    "maintainer": "Ilya Aliferov <krissmacer@yandex-team.ru>",
    "description": "Developer APIKeys Testing servant",
    "version": "svn.{svn_revision}-sandbox.{sandbox_task}",
    "homepage": "https://abc.yandex-team.ru/services/developer/",
    "noconffiles_all": false
  },
  "build": {
    "targets": [
      "billing/apikeys/test_apikeys_servant"
    ],
    "build_type": "release",
    "target-platforms": [
      "DEFAULT-LINUX-X86_64"
    ]
  },
  "data": [
    {
      "source": {
        "type": "BUILD_OUTPUT",
        "path": "billing/apikeys/test_apikeys_servant/balance_test_apikeys_uwsgi_app"
      },
      "destination": {
        "path": "/opt/yandex-balance-apikeys/"
      }
    },
    {
      "source": {
        "type": "ARCADIA",
        "path": "billing/apikeys/test_apikeys_servant",
        "files": [
          "servant.nonprod.cfg.xml",
          "balance-test-apikeys-uwsgi.ini"
        ]
      },
      "destination": {
        "path": "/etc/yandex/balance-test-apikeys/"
      }
    },
    {
      "source": {
        "type": "ARCADIA",
        "path": "billing/apikeys/test_apikeys_servant",
        "files": [
          "balance-test-apikeys-uwsgi.conf"
        ]
      },
      "destination": {
        "path": "/etc/init/"
      }
    },
    {
      "source": {
        "type": "ARCADIA",
        "path": "billing/apikeys/test_apikeys_servant",
        "files": [
          "balance-test-apikeys-uwsgi-logrotate"
        ]
      },

      "destination": {
        "path": "/etc/logrotate.d/"
      }
    }
  ]
}
